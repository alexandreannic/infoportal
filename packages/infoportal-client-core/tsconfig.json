{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "incremental": true,
    "outDir": "./lib",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src/index.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}