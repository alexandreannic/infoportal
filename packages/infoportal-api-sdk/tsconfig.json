{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2021",
      "dom"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./lib",
    "checkJs": false,
    "rootDir": "./src",
    "composite": true,
    "skipLibCheck": true,
    "traceResolution": true,
    "preserveWatchOutput": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*"
  ]
}
